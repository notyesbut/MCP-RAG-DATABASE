# Enterprise Multi-MCP Smart Database System Configuration

# Application Settings
NODE_ENV=development
PORT=8080
HOST=localhost
LOG_LEVEL=info

# Database Configuration
DATABASE_TYPE=smart_mcp
DATABASE_URL=mcp://localhost:8080/primary
DATABASE_ENCRYPTION_KEY=your-256-bit-encryption-key-here
DATABASE_MAX_CONNECTIONS=100
DATABASE_TIMEOUT=30000

# MCP Protocol Settings
MCP_PROTOCOL_VERSION=1.0
MCP_MAX_MESSAGE_SIZE=10485760
MCP_HEARTBEAT_INTERVAL=30000
MCP_COMPRESSION_ENABLED=true
MCP_ENCRYPTION_ENABLED=true

# Security Settings
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRY=24h
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000

# Performance Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
WORKER_THREADS=8
CONNECTION_POOL_SIZE=50

# Monitoring & Analytics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_COLLECTION_INTERVAL=60000
LOG_ROTATION_SIZE=10mb
LOG_RETENTION_DAYS=30

# Clustering Settings
CLUSTER_ENABLED=false
CLUSTER_NODES=localhost:8081,localhost:8082,localhost:8083
CLUSTER_REPLICATION_FACTOR=3
CLUSTER_CONSENSUS_ALGORITHM=raft

# Development Settings
DEBUG_MODE=true
HOT_RELOAD=true
DEVELOPMENT_SEEDS=true