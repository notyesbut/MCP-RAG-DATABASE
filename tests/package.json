{
  "name": "enterprise-multi-mcp-smart-database-tests",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for Enterprise Multi-MCP Smart Database System",
  "scripts": {
    "test": "node scripts/run-tests.js",
    "test:unit": "jest tests/unit --testTimeout=30000",
    "test:integration": "jest tests/integration --testTimeout=60000",
    "test:security": "jest tests/security --testTimeout=60000 --runInBand",
    "test:performance": "jest tests/performance --testTimeout=300000 --runInBand",
    "test:benchmarks": "jest tests/benchmarks --testTimeout=300000 --runInBand",
    "test:e2e": "jest tests/e2e --testTimeout=120000 --runInBand",
    "test:watch": "node scripts/run-tests.js --watch",
    "test:coverage": "node scripts/run-tests.js --coverage",
    "test:ci": "node scripts/run-tests.js --no-watch --coverage --verbose",
    "test:quick": "node scripts/run-tests.js --pattern \"unit/**\" --no-coverage",
    "test:parallel": "node scripts/run-tests.js --parallel",
    "test:sequential": "node scripts/run-tests.js --no-parallel",
    "test:debug": "node --inspect-brk scripts/run-tests.js --verbose --no-parallel",
    "coverage:report": "jest --coverage --coverageReporters=html",
    "coverage:open": "open tests/coverage/lcov-report/index.html",
    "lint:tests": "eslint tests/**/*.js --fix",
    "validate:tests": "node scripts/validate-tests.js",
    "benchmark": "npm run test:benchmarks",
    "stress-test": "node scripts/stress-test.js",
    "security-scan": "npm run test:security",
    "pre-commit": "npm run lint:tests && npm run test:quick",
    "pre-push": "npm run test:ci"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "supertest": "^6.3.3",
    "babel-jest": "^29.7.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.52.0",
    "eslint-plugin-jest": "^27.6.0"
  },
  "dependencies": {
    "sqlite3": "^5.1.6",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "express": "^4.18.2",
    "ws": "^8.14.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "../src/**/*.js",
      "!../src/**/*.test.js",
      "!../src/**/fixtures/**",
      "!../src/**/mocks/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "setupFilesAfterEnv": [
      "./helpers/setup.js"
    ],
    "testTimeout": 30000,
    "maxWorkers": "50%"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/enterprise/multi-mcp-smart-database.git"
  },
  "author": "Enterprise Development Team",
  "license": "MIT"
}