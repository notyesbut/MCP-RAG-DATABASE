# Environment Configuration for Enterprise Multi-MCP Smart Database System

# Application Environment
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/smart_mcp_db
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=30000
DATABASE_IDLE_TIMEOUT=10000

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# MCP Registry Configuration
MCP_REGISTRY_HOST=localhost
MCP_REGISTRY_PORT=3001
MCP_REGISTRY_MAX_INSTANCES=50
MCP_HEALTH_CHECK_INTERVAL=30000
MCP_METRICS_INTERVAL=60000

# Authentication & Security
JWT_SECRET=super-secret-jwt-key-for-ragdb
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=a-super-secret-32-character-key
SESSION_SECRET=another-super-secret-session-key

# API Configuration
API_RATE_LIMIT_REQUESTS=1000
API_RATE_LIMIT_WINDOW=900000
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3001
API_MAX_REQUEST_SIZE=10mb

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# Performance Configuration
CACHE_TTL=3600
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT=30000
MAX_CONCURRENT_REQUESTS=100

# RAG System Configuration
RAG1_CLASSIFICATION_THRESHOLD=0.8
RAG1_AUTO_ROUTING_ENABLED=true
RAG2_NLP_MODEL=gpt-3.5-turbo
RAG2_CONFIDENCE_THRESHOLD=0.7
RAG2_MAX_CONTEXT_LENGTH=8000

# Neural Learning Configuration
NEURAL_TRAINING_ENABLED=true
NEURAL_BATCH_SIZE=100
NEURAL_LEARNING_RATE=0.001
NEURAL_MODEL_SAVE_INTERVAL=3600

# Monitoring & Alerting
MONITORING_ENABLED=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENDPOINT=/health
ALERT_WEBHOOK_URL=
ALERT_EMAIL_NOTIFICATIONS=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups
BACKUP_COMPRESSION=true

# Feature Flags
FEATURE_AUTO_SCALING=true
FEATURE_PREDICTIVE_CACHING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_ML_OPTIMIZATION=true
FEATURE_REAL_TIME_MONITORING=true

# External Services
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
ELASTICSEARCH_URL=http://localhost:9200
SLACK_WEBHOOK_URL=
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=

# Development & Testing
DEBUG_MODE=false
PERFORMANCE_PROFILING=false
QUERY_DEBUGGING=false
MOCK_EXTERNAL_SERVICES=false
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/smart_mcp_test_db

# Cloud Provider Configuration (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
GCP_PROJECT_ID=
GCP_STORAGE_BUCKET=

# Advanced Configuration
WORKER_THREADS=4
CLUSTER_MODE=false
MEMORY_LIMIT=512mb
CPU_LIMIT=1000m
GRACEFUL_SHUTDOWN_TIMEOUT=10000
REQUEST_ID_HEADER=X-Request-ID